{
    "C_Cpp.clang_tidy.enabled": true,
    "C_Cpp.default.cStandard": "c23",
    "C_Cpp.default.cppStandard": "c++23",
    "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
    "C_Cpp.intelliSenseEngine": "disabled",
    "cSpell.language": "en,en-GB,pt,pt-BR",
    "cSpell.words": [
        "bnds",
        "ccache",
        "clangd",
        "coef",
        "constexpr",
        "Constexpr",
        "DCMAKE",
        "devel",
        "glpk",
        "GLPK",
        "glpsol",
        "groupinstall",
        "libreoffice",
        "lldb",
        "Makefiles",
        "msys",
        "MSYS",
        "outdir",
        "pacman",
        "setx",
        "soffice",
        "Struct",
        "winpthreads"
    ],
    "clang_tidy.additionalOptions": "--config-file=.clang-tidy",
    "clang_tidy.checks": "-*,readability-identifier-naming",
    "clang_tidy.enabled": true,
    "clangd.completion.style": "bundled",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureArgs": [
        "-DCMAKE_TOOLCHAIN_FILE=cmake/linux.cmake"
    ],
    "cmake.configureOnOpen": true,
    "cmake.debugConfig": {
        "linux": {
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/src/bismuto",
            "terminal": "integrated",
            "type": "lldb"
        },
        "windows": {
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}\\build\\src\\bismuto",
            "terminal": "console",
            "type": "lldb"
        }
    },
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.showOptionsMovedNotification": false,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "on",
    "editor.inlineSuggest.enabled": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.tabSize": 4,
    "files.associations": {
        "*.css": "css",
        "*.tcc": "cpp",
        "algorithm": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "cctype": "cpp",
        "charconv": "cpp",
        "chrono": "cpp",
